{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "CommonJS",
    "declaration": true,                     
    "declarationMap": true,                
    "sourceMap": true,             
    "outDir": "./dist",                        
    "resolveJsonModule": true,
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*"]
}
